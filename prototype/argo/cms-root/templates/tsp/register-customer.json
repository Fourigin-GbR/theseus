{
  "form": "register-customer",
  "validationPatterns": {
    "nameplates": "[A-ZÖÜÄ]{1,3} [A-ZÖÜÄ]{1,2} [1-9]{1}[0-9]{1,3}",
    "bank-account-codes": "^DE([0-9a-zA-Z]\\s?){20}$"
  },
  "fields": {
    "firstname": {
      "type": "form-text",
      "validation": {
        "mandatory": true
      }
    },
    "lastname": {
      "type": "form-text",
      "validation": {
        "mandatory": true
      }
    },
    "street": {
      "type": "form-text",
      "validation": {
        "mandatory": true
      }
    },
    "house-number": {
      "type": "form-text",
      "validation": {
        "mandatory": true
      }
    },
    "zip-code": {
      "type": "form-text",
      "validation": {
        "mandatory": true
      }
    },
    "city": {
      "type": "form-text",
      "validation": {
        "mandatory": true
      }
    },
    "nationality": {
      "type": "form-choose",
      "validation": {
        "mandatory": true
      },
      "values": {
        "german": null,
        "other": {
          "country": {
            "type": "form-text",
            "validation": {
              "mandatory": true
            }
          }
        }
      }
    }
  },
  "object-mappings": {
    "customer": {
      "type": "com.fourigin.argo.forms.customer.Customer",
      "mapper": {
        "type": "com.fourigin.argo.forms.mapping.GroovyScriptFormObjectMapper",
        "settings": {
          "file": "register-customer/customer-mapper.groovy"
        }
      }
    }
  }
}