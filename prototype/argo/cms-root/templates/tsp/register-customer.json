{
  "form": "register-customer",
  "validationPatterns": {
    "nameplates": "[A-ZÖÜÄ]{1,3} [A-ZÖÜÄ]{1,2} [1-9]{1}[0-9]{1,3}",
    "bank-account-codes": "^DE([0-9a-zA-Z]\\s?){20}$"
  },
  "fields": {
    "gender": {
      "type": "CHOOSE",
      "validation": {
        "mandatory": true
      },
      "values": {
        "MALE" : null,
        "FEMALE" : null
      }
    },
    "firstname": {
      "type": "TEXT",
      "validation": {
        "mandatory": true
      }
    },
    "lastname": {
      "type": "TEXT",
      "validation": {
        "mandatory": true
      }
    },
    "birthname": {
      "type": "TEXT"
    },
    "birthdate": {
      "type": "TEXT"
    },
    "cityOfBorn": {
      "type": "TEXT",
      "validation": {
        "mandatory": true
      }
    },
    "street": {
      "type": "TEXT",
      "validation": {
        "mandatory": true
      }
    },
    "house-number": {
      "type": "TEXT",
      "validation": {
        "mandatory": true
      }
    },
    "additional-info": {
      "type": "TEXT"
    },
    "zip-code": {
      "type": "TEXT",
      "validation": {
        "mandatory": true
      }
    },
    "city": {
      "type": "TEXT",
      "validation": {
        "mandatory": true
      }
    },
    "nationality": {
      "type": "CHOOSE",
      "validation": {
        "mandatory": true
      },
      "values": {
        "german": null,
        "other": {
          "country": {
            "type": "TEXT",
            "validation": {
              "mandatory": true
            }
          }
        }
      }
    },
    "contact.email": {
      "type": "TEXT",
      "validation": {
        "mandatory": true
      }
    },
    "contact.phone": {
      "type": "TEXT"
    },
    "contact.fax": {
      "type": "TEXT"
    }
  },
  "objectMappings": {
    "customer": {
      "type": "com.fourigin.argo.forms.customer.Customer",
      "mapper": {
        "type": "com.fourigin.argo.forms.mapping.GroovyScriptFormObjectMapper",
        "settings": {
          "file": "register-customer/customer-mapper.groovy"
        }
      }
    }
  }
}